{
	"name": "@sector.siit/mlz-components",
	"version": "1.0.16",
	"type": "module",
	"description": "Una librer√≠a de componentes React con Tailwind CSS y variables CSS customizables",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.esm.js",
			"require": "./dist/index.js"
		},
		"./styles.css": "./dist/styles.css",
		"./variables.css": "./dist/variables.css",
		"./dist/variables.css": "./dist/variables.css"
	},
	"sideEffects": [
		"*.css"
	],
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "rollup -c",
		"build:watch": "rollup -c -w",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"lint": "biome lint src",
		"lint:fix": "biome lint src --fix",
		"typecheck": "tsc --noEmit",
		"test": "jest",
		"prepublishOnly": "bun run build"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"keywords": [
		"react",
		"components",
		"tailwind",
		"typescript",
		"ui-library"
	],
	"author": "Pablo Lugo",
	"license": "MIT",
	"peerDependencies": {
		"react": "^18.0.0 || ^19.0.0",
		"react-dom": "^18.0.0 || ^19.0.0",
		"react-hot-toast": "^2.4.0",
		"tailwindcss": "^4.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@rollup/plugin-commonjs": "25.0.7",
		"@rollup/plugin-node-resolve": "15.2.3",
		"@rollup/plugin-typescript": "11.1.5",
		"@storybook/addon-essentials": "7.6.6",
		"@storybook/addon-interactions": "7.6.6",
		"@storybook/addon-links": "7.6.6",
		"@storybook/blocks": "7.6.6",
		"@storybook/react": "7.6.6",
		"@storybook/react-vite": "7.6.6",
		"@storybook/testing-library": "0.2.2",
		"@tailwindcss/postcss": "^4.1.17",
		"@types/minimatch": "6.0.0",
		"@types/react": "18.2.45",
		"@types/react-dom": "18.2.18",
		"autoprefixer": "^10.4.21",
		"globals": "16.3.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hot-toast": "^2.6.0",
		"rollup": "4.9.1",
		"rollup-plugin-copy": "^3.5.0",
		"rollup-plugin-dts": "6.1.0",
		"rollup-plugin-postcss": "^4.0.2",
		"storybook": "7.6.6",
		"tailwindcss": "4.1.17",
		"typescript": "5.3.3",
		"vite": "5.0.10"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pablolugo/mlz-components.git"
	},
	"homepage": "https://pablolugo.github.io/mlz-components",
	"bugs": {
		"url": "https://github.com/pablolugo/mlz-components/issues"
	}
}
