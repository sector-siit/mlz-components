{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
	"vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
	"files": {},
	"formatter": { "enabled": true, "indentStyle": "tab" },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"suspicious": {
				"noUnknownAtRules": {
					"level": "off",
					"options": {
						"ignore": ["@theme", "@utility", "@apply"]
					}
				}
			}
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		},
		"linter": {
			"enabled": false
		}
	},
	"javascript": { "formatter": { "quoteStyle": "double" } },
	"overrides": [
		{
			"includes": ["src/styles.css", "**/*.css"],
			"linter": {
				"enabled": false
			}
		},
		{
			"javascript": {
				"globals": [
					"onscrollend",
					"onpointerleave",
					"oncontextrestored",
